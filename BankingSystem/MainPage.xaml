<Page x:Class="BankingSystem.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankingSystem"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Name="userNameBlock" FontSize="20" Grid.Row="1" Grid.ColumnSpan="3"/>
        <TextBlock Text="Кол. денег:" FontSize="20" Grid.Row="2"/>

        <TextBox Name="countMoneyBox" Grid.Column="1" Grid.Row="2"/>

        <Button Name="ReplenishButton" Content="Пополнить" Grid.Row="4"/>
        <Button Name="OutputButton" Content="Вывести" Grid.Column="1" Grid.Row="4"/>
    </Grid>
</Page>
